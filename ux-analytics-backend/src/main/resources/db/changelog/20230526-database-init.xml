<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="20240526-1" author="dragutin">

        <createTable tableName="user_journey">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_journey"/>
            </column>
            <column name="token" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="user_journey_characteristic">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_journey_characteristic"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="unit" type="VARCHAR(255)"/>
            <column name="value" type="VARCHAR(255)"/>
            <column name="user_journey_id" type="UUID"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="user_journey_id"
                                 baseTableName="user_journey_characteristic"
                                 constraintName="FK_USER_JOURNEY_CHARACTERISTIC_ON_USER_JOURNEY"
                                 referencedColumnNames="id"
                                 referencedTableName="user_journey"/>

    </changeSet>

    <changeSet id="20240526-2" author="dragutin">

        <addUniqueConstraint tableName="user_journey" columnNames="token" constraintName="uk_user_journey_token"/>
    </changeSet>


    <changeSet id="20240526-3" author="dragutin">

        <addColumn tableName="user_journey">
            <column name="started_at" type="datetime" />
        </addColumn>

        <addColumn tableName="user_journey">
            <column name="ended_at" type="datetime" />
        </addColumn>

        <addColumn tableName="user_journey">
            <column name="form_number" type="integer" />
        </addColumn>
    </changeSet>

</databaseChangeLog>
